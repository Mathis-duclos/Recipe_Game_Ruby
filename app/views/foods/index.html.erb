<p style="color: green"><%= notice %></p>

<% content_for :title, "Foods" %>

<div class="text-center">
<h1>Plats</h1>
</br>
  <%= link_to "Ajouter un délicieux met", new_food_path, class: "btn btn-success" %>
</div>
<br>
<div class="container">
  <div class="row">
    <% @foods.each do |food| %>
      <div class="col-sm-6 col-md-4 col-lg-2 mb-4"> <!-- il y a 12 colonnes sur un écran, les cartes utilisent 6 4 ou 2 col, suivant si l écran est petit moyen ou grand -->
        <div class="card">
          <img src="<%= food.image %>" class="card-img-top object-fit-cover" alt="<%= food.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= food.name %></h5>
            <p class="card-text"><%= food.description %></p>
            <p class="card-text"><strong>Game:</strong> <%= food.game.title %></p>
            <%= link_to "Voir ce plat", food, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
