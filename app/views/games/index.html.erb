<p style="color: green"><%= notice %></p>

<% content_for :title, "Games" %>

<div class="text-center">
<h1>Games</h1>
<br>
  <%= link_to "Ajouter un nouveau jeu", new_game_path, class: "btn btn-success" %>
</div>
<br>
<div class="container">
  <div class="row">
    <% @games.each do |game| %>
      <div class="col-sm-6 col-md-4 col-lg-4 mb-4">
        <div class="card">
          <img src="<%= game.cover %>" class="card-img-top object-fit-cover" alt="<%= game.title %>">
          <div class="card-body">
            <h5 class="card-title"><%= game.title %></h5>
            <p class="card-text"><%= truncate(game.description, length: 100, omission: '...') %></p>
            <!-- Affichage du nombre de plats -->
            <p class="card-text"><strong>Plats associ√©s :</strong> <%= game.foods.count %></p>
            <%= link_to "Liste des plats", game, class: "btn btn-primary" %>
            <!-- Bouton Edit -->
            <%= link_to "Modifier", edit_game_path(game), class: "btn btn-warning ml-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>