<%= form_with(model: @game, local: true) do |form| %>
  <div class="row">
    <!-- Colonne de gauche : Titre, Cover et Release Year -->
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :cover, class: "form-label" %>
        <%= form.text_field :cover, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :release_year, class: "form-label" %>
        <%= form.number_field :release_year, class: "form-control", required: true %>
      </div>
    </div>

    <!-- Colonne de droite : Description -->
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, class: "form-control", rows: 5, required: true %>
      </div>
    </div>
  </div>

  <div class="form-group text-center mt-4">
    <%= form.submit "Create Game", class: "btn btn-primary" %>
  </div>
<% end %>