<% content_for :title, "Editing recipe" %>

<div class="container mt-5">
  <h1 class="text-center mb-4">Modifier la recette</h1>

  <div class="card">
    <div class="card-body">
      <%= render "form", recipe: @recipe %>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Voir cette recette", @recipe, class: "btn btn-info mr-2" %>
    <%= link_to "Retour aux recettes", recipes_path, class: "btn btn-secondary" %>
  </div>
</div>